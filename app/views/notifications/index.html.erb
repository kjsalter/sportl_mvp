<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <ul class="notification-index-list">
      <% if $notifications_count != 0 %>
        <h1 class="text-center"> Notifications ( <%= $notifications_count %> )</h1>
      <% else %>
        <h1 class="text-center"> Notifications </h1>
      <% end %>
      <% @notifications.each do |notification| %>
        <li><%= link_to notification.content, notification.notificationable %>
        <%= time_from_today(notification) %>
        <%= link_to notification_path(notification), method: :delete do %>
          <i class="fa fa-times" aria-hidden="true"></i>
        <% end %>
        </li>

      <% end %>
      </ul>
    </div>
  </div>
</div>
