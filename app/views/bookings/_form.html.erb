<%= simple_form_for [@event, @booking] do |f| %>
  <%= f.input :no_players, label: 'Size of party', collection: 1..(@event.missing_player), default: 1, method: :update%>

    <% if user_signed_in? %>
      <%= f.button :submit, class: "btn btn-primary", value: "Request to join!" %>
    <% else %>
      <%= link_to "Request to join!", protected_event_path(@event), class: 'btn btn-primary' %>
    <% end %>
<% end %>
