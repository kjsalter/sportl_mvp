<div class="booking-wrapper">
  <div class="container text-center">
    <div class="row">
      <div class="col-xs-12">
        <h2>
          You have requested <%= @booking.no_players %> places on <%= link_to @booking.event.title, event_path(@booking.event) %>
        </h2>
      </div>
      <div class="col-xs-3">
        <%= @booking.event.start_time.strftime("%d-%m-%Y") %>
      </div>
      <div class="col-xs-3">
        <%= @booking.event.description.capitalize %>
      </div>
      <div class="col-xs-3">
        You are playing <%= @booking.event.sport.name %>
      </div>
      <div class="col-xs-3">

      </div>
      <div class="col-xs-12">
        <!-- Event leader <%# @booking.event.user.first_name + " " + @booking.event.user.last_name %> -->
        Status: <%= @booking.booking_state %>
      </div>
    </div>
  </div>
</div>

