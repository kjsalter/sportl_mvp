<div class="card">
  <div class="sport-image">
    <%= image_tag ("sports-photos/" + booking.event.sport.name + ".jpg"), style: "width: 15vmin" %>
  </div>
  <div class="card-info">
    <h3><%= booking.event.title %></h3>
    <p><%= booking.event.start_time %></p>
    <br>
    <h3><%= booking.booking_state %></h3>
  </div>
  <div class="right-side">
    <% avatar_url = booking.event.user.photo? ? cl_image_path(booking.event.user.photo.path) : booking.event.user.facebook_picture_url || "https://api.adorable.io/avatars/285/sportl.png" %>
    <%= image_tag avatar_url, class: "avatar" %>
  </div>
  <%= link_to "", booking_path(booking), class:"card-link" %>
</div>
