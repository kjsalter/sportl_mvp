<div class="container">
  <h2>My bookings</h2>
  <div class="row">
    <% current_user.bookings.each do |booking| %>
    <div class="col-xs-12 col-md-6">
      <div class="grid" style="height: 30vmax">
        <figure class="effect-bibi">
          <% background_image = ("sports-photos/" + booking.event.sport.name + ".jpg") %>
          <%= image_tag (background_image) %>
          <figcaption style="padding: 5px">
            <h3> <%= booking.event.title %> </h3>
            <p><%= booking.event.description %></p>
            <p><%= booking.event.start_time %> --- <%= booking.booking_state %> </p>
            <p> <%= link_to 'Chat to Event owner', conversations_path(sender_id: current_user.id, recipient_id: booking.event.user.id), method: "post", class: "btn btn-primary"%></p>
            <% avatar_url = booking.event.user.photo? ? cl_image_path(booking.event.user.photo.path) : booking.event.user.facebook_picture_url || "http://placehold.it/30x30" %>
            <%= image_tag avatar_url, id: "card-avatar" %>
            <%= link_to "", booking_path(booking) %>
          </figcaption>
        </figure>
      </div>
    </div>
    <% end %>
  </div>
</div>
